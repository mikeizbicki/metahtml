<script type="text/javascript">
    
    searchContentKeyPress($('#navSearchInput'), 'navSearchEmpty', 'navSearchDefault', function () {
        doSearch($('#navSearchInput'));
    }, true);

        
    shortDataFuntions.push(function () {
        var result = "data-headerLongText";
        if (viewportWidth < 660) {
            result = "data-headerShortText";
        }
        return result;
    });
    

    addLayoutCompletedEventListener(function (e) {
        if (!resize) {
            if (isIEorEdge) {
                $('#navSearchInput').css('padding-right', '0px', '!important');
            }
        }

        
        var orginalHoverFunc = undefined;

        orginalHoverFunc = hover;
        hover = function (obj, classname) {
            "use strict";
            orginalHoverFunc(obj, classname);
            if ($(obj).hasClass('title')) {
                $(obj).removeClass('title');
            } else {
                $(obj).addClass('title');
            }
        }

        var tmp = menuSize;

        switch (layout) {
            case layout3: {
                tmp = 400;
                break;
            }
            case layout4: {
                tmp = 400;
                break;
            }
        }

        var wDiv = tmp - ($('.headerEInfoCol1').length == 0 ? 10 : 0);
        var wInput = $('.headerEInfoCol1').length == 0 ? (wDiv - 75) : (wDiv - 85);
        $('#navSearch').width(wDiv);
        $('#navSearchInput').width(wInput);

        var wNav = ~~($('#navHeader').width() - $('#navSearch').outerWidth(true));
        

        var tmp = parseInt($('#mainCenterDiv').css('margin-left'));
        if ($('.indentElement').length > 0) {
            tmp += parseInt($('.indentElement').css('padding-left')) + parseInt($('.indentElement').css('margin-left'));
        }

        if (viewportWidth >= 650 && viewportWidth < 800) {
            $('.navHeaderItem').not('#navSearch').css('padding', '1px 10px');
        } else if (viewportWidth < 650) {
            $('.navHeaderItem').not('#navSearch').css('padding', '1px 6px');
        } else {
            var tmp2 = parseInt($($('.navHeaderItem')[1]).css('padding-left'));
            if (tmp >= tmp2) {
                $('#navHeaderTable').not('#navSearch').css('margin-left', (tmp - tmp2) + 'px');
            } else {
                $('.navHeaderItem').not('#navSearch').css('padding', '1px ' + tmp + 'px');
            }
        }

        if (viewportWidth >= 820 && viewportWidth < 860) {
            $('.navHeaderItem').not('#navSearch').css('padding', '1px 20px');
        } else if (viewportWidth >= 720 && viewportWidth < 820) {
            $('.navHeaderItem').not('#navSearch').css('padding', '1px 15px');
        }
        else if (viewportWidth >= 650 && viewportWidth < 720) {
            $('.navHeaderItem').not('#navSearch').css('padding', '1px 12px');
        } else if (viewportWidth < 650) {
            $('.navHeaderItem').not('#navSearch').css('padding', '1px 4px');
        } else {
            var tmp2 = parseInt($($('.navHeaderItem')[1]).css('padding-left'));
            if (tmp >= tmp2) {
                $('#navHeaderTable').not('#navSearch').css('margin-left', (tmp - tmp2) + 'px');
            } else {
                $('.navHeaderItem').not('#navSearch').css('padding', '1px ' + tmp + 'px');
            }
        }

		if (viewportWidth < 1400) {
			
            $('#headerNavTable').removeClass('fL').addClass('fR');
        } else {
			$('#headerNavTable').removeClass('fR').addClass('fL');
			
		}
    });
</script>


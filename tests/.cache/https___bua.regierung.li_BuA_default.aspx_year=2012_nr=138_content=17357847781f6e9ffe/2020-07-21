<script type="text/javascript">
    

	function toggleTocItem(e, obj, noAnimation) {
		 
        var tocitem = $(obj).parents('.tocItem');
        if (noAnimation) {
            tocitem.next().toggle();
        } else {
            tocitem.next().slideToggle();
        }
        var img = $(obj).parents('.tocItem').find('img');
        toggleClass(img, 'arrowUp', 'arrowDown');
        if (img.hasClass('arrowUp')) {
            img.attr('src', './grafik/base/ico_pfeil_up_off.png');
        } else {
            img.attr('src', './grafik/base/ico_pfeil_down_off.png');
        }

        if (tocitem.hasClass('tocItemSelected')) {
            var tmp = tocitem.next().find('.tocItemSelected2');
            if (tmp.length > 0) {
                tocitem.removeClass('tocItemSelected');
                $(tmp[0]).addClass('tocItemSelected');
            }
        } else {
            var tmp = tocitem.next().find('.tocItemSelected');
            if (tmp.length > 0) {
                tocitem.addClass('tocItemSelected');
                $(tmp[0]).removeClass('tocItemSelected');
            }
        }
    }

    function gotoTocEntry(e, content) {
        var targ;

        if (e.target) { // W3C
            targ = e.target;
        } else if (e.srcElement) { // IE6-8
            targ = e.srcElement;
        }
        if (targ.nodeType == 3) { // Safari
            targ = targ.parentNode;
        }

        if (targ.tagName != "IMG") {
            loadContent(content);
        }
    }

    
</script>
</div>

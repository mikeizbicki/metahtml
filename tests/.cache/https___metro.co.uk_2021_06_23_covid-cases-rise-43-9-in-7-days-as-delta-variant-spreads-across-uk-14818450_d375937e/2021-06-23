			// @formatter:off
			if (metro.pageData) {
				var rtaParams = {};

				if (document.referrer) {
					rtaParams.r = document.referrer;
				}

				rtaParams.rp = (metro.pageData) ? metro.pageData.deviceType : '';

				rtaParams.category = metro.pageData.topCategory;
				rtaParams.subcategory = metro.pageData.subCategory;

								rtaParams.authors = metro.pageData.author;

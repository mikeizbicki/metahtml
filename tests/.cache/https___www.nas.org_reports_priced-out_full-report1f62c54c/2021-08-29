<script>
        if ($(".excerpt-left, .pullquote-left").find('.quotes-social').empty()) {
            $(".excerpt-left, .pullquote-left").each(function (index, element) {
                if ($('.quotes-social'))
                    var $url = document.location.origin + $(this).closest($('article.article-container.ias-item')).attr('data-url');
                var $title = $("<div/>").html($(this).closest($('article.article-container.ias-item')).attr('data-title')).text();
                var $description = $(this).text();

                $('<div class="quotes-social"> <ul> <li class="addthis_toolbox fb share_0" addthis:url="' + $url + '" addthis:description="' + $description + '"><a href="https://www.facebook.com/NationalAssociationofScholars" class="share_fb addthis_button_facebook at300b" target="_blank" title="Facebook"><span><img src="https://www.nas.org/themes/nas/assets/images/facebook.svg"></span></a><div class="atclear"></div></li> <li class="addthis_toolbox tw share_1" addthis:url="' + $url + '" addthis:title="' + $description + '"><a href="https://twitter.com/nasorg" tw:via="nasorg" class="share_fb addthis_button_twitter at300b" target="_blank" title="Twitter"><span><img src="https://www.nas.org/themes/nas/assets/images/twitter.svg"></span></a><div class="atclear"></div></li> </ul> </div>').appendTo(element);
            });

            addthis.toolbox('.addthis_toolbox');
        }


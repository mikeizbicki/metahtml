<script type="801bd2fb3ebdc0f61c2ac875-text/javascript">
function planList(){
fetch('https://tai.thehindu.com/v1/subscription/getplaninfo/HINDU?tagid=23&siteid=TRC-J3AFTO')
.then(
function(response) {
response.json().then(function(response) {
if(response.camapignList.length > 0){
//alert();
var amount = "";
var amountsymbol= "";
var isCountryIndia = false;
var countryCurrency = "USD";
if(response.country == "India"){
isCountryIndia = true;
countryCurrency="INR";
}
var Full = '';
for(var i = 0 ; i < response.camapignList.length; i++){
var newId = response.camapignList[i].planId;	var resp = JSON.parse(response.camapignList[i].custLabel1);
var __planName = resp.planName;
var __StrikeAmount = resp.StrikeAmount;
var __discount = resp.discount;
var __actualprice = resp.actualprice;
var __validity = resp.validity;
var __StrikeUSD = resp.StrikeUSD;
var __strike = resp.strike;
if(__StrikeAmount == null || __StrikeAmount == ''){
var strikeDiv = "";
}else{
var strikeDiv = "<span class='rupe-strike'>₹</span>"+__StrikeAmount;
}
if(__discount == null){
var discountDiv__ = "";
}else{
var discountDiv__ = "<div class='bf-discount-ribbon'><img src='https://www.thehindu.com/static/theme/default/base/img/officonred.png'><div class='bf-discountpersentage'>"+__discount+" off</div></div>";
}
Full += "<div class='SectionsInDiv"+i+" planDIV'><div class='lblockCw lblock5'><div class='col-md-4 col-xs-4 nopad'><div class='bgDiv0'><span class='amountsymbol-strikeout'>"
+ strikeDiv + "</span><div class='planamountprice'><span class='amountsymbol'>₹</span>"+__actualprice+"<div class='planvalidity'>"+__validity+"</div></div></div></div><div class='col-md-8 col-xs-8 stextrt'>"+discountDiv__+"<h4>"+__planName+"</h4><p >Get full access to all articles for "+__validity+"</p><a class='subnnerBtndiv' href='https://subscription.thehindu.com/check-out?planid="+newId+"?utm_source=meterpaywall&utm_medium=30479336&utm_campaign=national'>Subscribe Now</a></div></div></div>";
if(isCountryIndia){
amount = response.camapignList[i].amount;
var amountdisplay = Math.round(amount);
amountsymbol ='₹';	}else{
amount = response.camapignList[i].usdAmount;
var amountdisplay = amount;
amountsymbol='$';
}
}
document.getElementById("subscriptionPlan").innerHTML =Full;
}
if(response.camapignList.length > 2){
var list = document.querySelectorAll(".moreCliCk");
for (var i = 0; i < list.length; ++i) {
list[i].style.display = "block";
}	}
});
}
)
.catch(function(err) {
});
}

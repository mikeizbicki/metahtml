<script type='text/javascript'>
    var WCS = WCS || {};
    console.log('WCS: ', WCS)
    WCS.SITE_URL = "//abc57.com/";
    WCS.THREAD_ID = 146828;
    WCS.TALKUMS_SITE_ID = 3; 

    WCS.REPLY_PARENT_ADMIN = -1;
    WCS.REPLY_LEVEL = -1;
    WCS.FLAG_ID = -1;
    WCS.IS_POSTING = false;
    WCS.IS_LIKING = false;
    WCS.USER_ID = "-1";
    WCS.USER = "";
    WCS.USER_DISPLAY_NAME = "";
    WCS.socket = null;
    /*

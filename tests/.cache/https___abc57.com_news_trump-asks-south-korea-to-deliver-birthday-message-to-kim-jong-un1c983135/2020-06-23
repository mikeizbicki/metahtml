    WCS.TWITTER_SHARE = 'https://twitter.com/home?status=' + WCS.THREAD_URL;
    WCS.PROFILE_OPEN = false;
    WCS.SIDEBAR_PAGE = "";
    WCS.POPUP_OPEN = false;

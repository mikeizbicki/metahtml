<script language="javascript">
	function printObject(o) {
	  var out = '';
	  for (var p in o) {
		out += p + ': ' + o[p] + '\n';
	  }
	  console.log("%c" + out , "color:green");
	}


	function logoutBtn() {
		GCN.onecount.logout('MNMH');
	}
	function loginBtn() {
		GCN.onecount.login('MNMH');
	}


    var checkStatus = function () {
        $('#login_status').html("...");
        $('#login_status_mobile').html("...");

        if ( GCN.onecount.isLoggedIn() ) {
			GCN.on("init").then(function(data) {
				/*
				console.log( 'BEGIN ONEcount logs' );
				console.log('Main Data');
				printObject(data);
				console.log('Demo Data');
				printObject(data.demo);
				console.log('Cookie Data');
				printObject(data.cookie);
				console.log( 'END ONEcount logs' );
				*/

				$('#login_status').html('Welcome: <strong><a class="subscriber_name" href="https://on-reg.onecount.net/onecount/flexreg/editprofile.php?brand=MNMH" title="View Profile">' + data.demo[4] + '</a></strong> - <a href="javascript:logoutBtn()">Logout</a>' );
				$('#login_status_mobile').html('Welcome: <strong><a class="subscriber_name" href="https://on-reg.onecount.net/onecount/flexreg/editprofile.php?brand=MNMH" title="View Profile">' + data.demo[4] + '</a></strong> - <a href="javascript:logoutBtn()">Logout</a>' );
			});
		} else { 
			GCN.on("init").then(function(data) {
				/*
				console.log( 'BEGIN ONEcount logs' );
				console.log('Main Data');
				printObject(data);
				console.log('Demo Data');
				printObject(data.demo);
				console.log('Cookie Data');
				printObject(data.cookie);
				console.log( 'END ONEcount logs' );
				*/
			});
			$('#login_status').html('<a href="javascript:loginBtn()">Login</a>');
			$('#login_status_mobile').html('<a href="javascript:loginBtn()">Login</a>');
		}
		
    };

	
    $(function () {
        setTimeout(function(){ checkStatus(); }, 2000);
    });

</script>



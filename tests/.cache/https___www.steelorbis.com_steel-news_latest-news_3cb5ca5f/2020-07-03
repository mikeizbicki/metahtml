function highlight(searchBoxId, dataValue) {
	var searchKey = $('#'+searchBoxId).val();
	var boldRangeAry = createBoldRangeArray(searchKey, dataValue);
	return createHiglightedText(dataValue, boldRangeAry);
}

function createBoldRangeArray(searchKey, dataValue) {
	var normalizedKey = replaceTrToAscii(searchKey).toLowerCase().trim();
	var normalizedData = replaceTrToAscii(dataValue).toLowerCase();
	var searchKeys = normalizedKey.replace( /\s\s+/g, ' ' ).split(" ");
	var boldRangeAry = new Array(normalizedData.length);
	for(i = 0; i < searchKeys.length; i++) {
		var current = -1;
		var currentKey = searchKeys[i];
		while(( current = normalizedData.indexOf(currentKey, current + 1)) > -1) {
			for(j= 0; j < currentKey.length; j++) {
				boldRangeAry[current + j] = true;
			}
		}
	}
	
	return boldRangeAry;
}

function createHiglightedText(dataValue, boldRangeAry) {
	var highlightedDataValue = "";
	var last = false;
	for(i = 0; i < dataValue.length; i++) {
		if(last != true && boldRangeAry[i] == true) {
			highlightedDataValue += "<strong>" + dataValue[i];	
		} else if (last == true && boldRangeAry[i] != true){
			highlightedDataValue += "</strong>" + dataValue[i];
		} else {
			highlightedDataValue += dataValue[i];
		}
		last = boldRangeAry[i];
	}
	
	return highlightedDataValue;
}

function replaceTrToAscii(str) {
	var strNew = "";
	for(i = 0; i < str.length; i++) {
		switch (str[i]) {
		case 'İ': strNew += 'I'; break;
		case 'Ç': strNew += 'C'; break;
		case 'Ğ': strNew += 'G'; break;
		case 'Ş': strNew += 'S'; break;
		case 'Ö': strNew += 'O'; break;
		case 'Ü': strNew += 'U'; break;
		case 'ı': strNew += 'i'; break;
		case 'ç': strNew += 'c'; break;
		case 'ğ': strNew += 'g'; break;
		case 'ş': strNew += 's'; break;
		case 'ö': strNew += 'o'; break;
		case 'ü': strNew += 'u'; break;
		default: strNew += str[i];
		}
	}
	return strNew;
}

</script>
<script type="text/javascript">
	jQuery("#companySearchLink").click(function(){
		var f = document.searchForm;
		var searchKey  = jQuery("#search").val();
		if(searchKey!="" || searchKey != ""){
			var searchUrl = getSearchUrl();
			f.action = searchUrl;
			jQuery("#companySearchLink").attr("disabled", "disabled");
			f.submit();
			return true;
		}else{
			return false;
		}
	});

</script>

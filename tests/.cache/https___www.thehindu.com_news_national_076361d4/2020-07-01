<script type="bf731d14331d641be7a4ece8-text/javascript">
$(document).ready(function(e) {
var vars = [], hash;
var q = document.URL.split('?')[1];
if (q != undefined) {
q = q.split('&');
for (var i = 0; i < q.length; i++) {
hash = q[i].split('=');
vars.push(hash[1]);
vars[hash[0]] = hash[1];
}
}
var selctor = ".ajaxFilter>.container.section-header>.section-header-container>h2:contains('Other Articles')";
if (typeof vars['page'] != 'undefined') {
var container = $('html, body');
// get the href attribute of the target div
var scrollTo = $(selctor).closest(".ajaxFilter");
// find the top position of the target div
var positionTop = scrollTo.offset().top - container.offset().top + container.scrollTop();
positionTop = positionTop - 80;
// scroll to the correct position
container.animate({
scrollTop: positionTop
}, 2000);
}
});
</script>

<script type="8f9e26d293ad4cecc642a132-text/javascript">
$(document).ready(function() {
var $status2 = $('.pagingInfo-sc');
$('.esc3').on('init reInit afterChange', function(event, slick, currentSlide, nextSlide) {
//currentSlide is undefined on init -- set it to 0 in this case (currentSlide is 0 based)
var i = (currentSlide ? currentSlide : 0) + 1;
$status2.text(i + '/' + slick.slideCount);
});
$('.esc3').slick({
slidesToShow: 4,
autoplay: false,
autoplaySpeed: 4000,
draggable: true,
swipeToSlide: true,
prevArrow: '<i class="fa fa-angle-left esc-left"></i>',
nextArrow: '<i class="fa fa-angle-right esc-right"></i>',
responsive: [{
breakpoint: 765,
settings: {
slidesToShow: 2,
variableWidth: true,
slidesToScroll: 1,
infinite: true,
dots: false,
vertical: false,
arrows: false
}
}]
});
});
</script>
</div>

var g_homepagelanding = {

/* Config */
date_begin: '2020/12/04 00:00:00 GMT+0700',
date_end: '2020/12/05 23:59:59 GMT+0700',
cookie_name: 'is_show_homepage_landing',
domain: 'bangkokpost.com',
// age: 86400, /* 1 Day */
age: 10800, /* 3 Hours */
get_cookie_homepagelanding: function() {
	var v = document.cookie.match('(^|;) ?' + this.cookie_name + '=([^;]*)(;|$)');
	return v ? v[2] : null;
},
close_homepagelanding: function() {
	var d = new Date();
	d.setTime(d.getTime() + (this.age * 1000));
	document.cookie = this.cookie_name + "=1;domain=" + this.domain + ";path=/;expires=" + d.toGMTString();
},
show_homepagelanding: function() {
	this.close_homepagelanding();
	location = 'https://www.bangkokpost.com/page/father-day-2020/';
},
check_show_homepagelanding: function() {
	var multi_timezone_offset = 60000;
	var t = new Date();
	var utc_now = t.getTime() + (t.getTimezoneOffset() * multi_timezone_offset);
	var check_date_begin = new Date(this.date_begin);
	var utc_begin = check_date_begin.getTime() + (check_date_begin.getTimezoneOffset() * multi_timezone_offset);
	var check_date_end = new Date(this.date_end);
	var utc_end = check_date_end.getTime() + (check_date_end.getTimezoneOffset() * multi_timezone_offset);

	if (utc_now > utc_begin && utc_now < utc_end) {
		var is_noti = this.get_cookie_homepagelanding();
		if (!is_noti) {
			return true;
		}
	} else {
		return false;
	}
},
set_homepagelanding: function() {
	if (this.check_show_homepagelanding()) {
		this.show_homepagelanding();
	}
}
}
</script>

<script type="text/javascript">
	if ($(".box-diary-info").length) {
		var elm_today_info_tab;
		var count_tab_today_info;
		var today_info_delay = 10000;
		var today_info_interval;

		(function($, window, document) {
			/* Jquery ready here */
			elm_today_info_tab = $(".box-diary-info .tab-slider--trigger");
			count_tab_today_info = elm_today_info_tab.length;
			today_info_interval = setInterval(slide_today_info, today_info_delay);
		}(window.jQuery, window, document));

		function slide_today_info() {
			for (i = 0; i < count_tab_today_info; i++) {
				if (elm_today_info_tab.eq(i).hasClass('active')) {
					break;
				}
			}
			if (i >= (count_tab_today_info - 1)) {
				i = 0;
			} else {
				i++;
			}
			elm_today_info_tab.eq(i).trigger("click");
		}

		$(".box-diary-info")
			.mouseenter(function() {
				clearInterval(today_info_interval);
			})
			.mouseleave(function() {
				today_info_interval = setInterval(slide_today_info, today_info_delay);
			});
	}

	$(function() {
		// @TODO: Fix outbrain gap
		setTimeout(function() {
			if ($('#ctcg_frame_65349_0').length) {
				$('#ctcg_frame_65349_0').hide();
			}
		}, 3000);

	
	});
</script>





<script type='text/javascript'>
var is_bkp_newdesign_switched = null;

function get_cookie_bkp_newdesign(name) {
	var v = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
	return v ? v[2] : null;
}

function accept_bkp_newdesign_switched() {
	var d = new Date;
	d.setTime(d.getTime() + 31536000000); // 1 year
	document.cookie = "is_bkp_newdesign_switched=1;domain=bangkokpost.com;path=/;expires=" + d.toGMTString();	
}

function check_bkp_newdesign_switched() {
	var is_bkp_newdesign_switched = get_cookie_bkp_newdesign('is_bkp_newdesign_switched');
	if (!is_bkp_newdesign_switched) show_bkp_newdesign_bar();
}

function go_bkp_old_newdesign() {
	accept_bkp_newdesign_switched();
	location="https://www.bangkokpost.com?olddesign=1";
}

function close_bkp_newdesign_bar() {
	accept_bkp_newdesign_switched();
	document.getElementById("beta-banner").remove();
	// $('#beta-banner').fadeOut();
}

function show_bkp_newdesign_bar() {

	$('body').append('\
		<div class="beta-footer" id="beta-banner" style="display:none">\
			<div class="container">\
				<div class="beta-footer-content">\
					<div class="beta-close"><a onclick="close_bkp_newdesign_bar();" href="javascript:;" id="beta-close"><img src="https://static.bangkokpost.com/newdesign/assets/images/beta/close.svg" alt=""></a></div>\
					<div class="beta-header">YOU’RE LOOKING AT THE NEW DESIGN.</div>\
					<div class="beta-btn">\
						<a target="_blank" href="https://docs.google.com/forms/d/e/1FAIpQLSf7I92Q7BGfYI652QyxSQ2ofoop7HEPDQqYn9WNLzZqypx6Kg/viewform?hl=en">TELL US WHAT YOU THINK <img src="https://static.bangkokpost.com/newdesign/assets/images/beta/arrow.svg" alt=""></a>\
						<!--<a class="track_newdesign" href="javascript:;" onclick="go_bkp_old_newdesign();">RETURN TO THE CURRENT DESIGN <img src="https://static.bangkokpost.com/newdesign/assets/images/beta/arrow.svg" alt=""></a>--\>\
					</div>\
				</div>\
			</div>\
		</div>\
	');
	// https://docs.google.com/forms/d/e/1FAIpQLSf7I92Q7BGfYI652QyxSQ2ofoop7HEPDQqYn9WNLzZqypx6Kg/viewform?usp=sf_link

	$(window).scroll(function() {
		if ($(window).scrollTop() > 200) {
			$('#beta-banner').fadeIn();
		} else {
			$('#beta-banner').fadeOut();
		}
	});
	$('#beta-close').click(function() {

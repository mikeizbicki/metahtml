							switch (position) {
								case 'highlight':
									$('div.col-15.col-md.col-lg-15.col-highlights-side').eq(1).before('<div class="col-15 col-md col-lg-15 col-highlights-side"><article><div class="hilight_sec"><div class="list-h"><div class="list-detail"><div class="h-line">sponsored</div><h3><a href="'+click_url+'">'+headline+'</a></h3><p>'+intro+'</p></div><figure><a href="'+click_url+'"><img src="'+src+'" alt=""></a></figure></div></div></article><img src="'+view_url+'" width="0" height="0"/></div>');

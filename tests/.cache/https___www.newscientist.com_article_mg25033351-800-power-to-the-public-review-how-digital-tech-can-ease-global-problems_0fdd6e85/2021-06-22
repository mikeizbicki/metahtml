                const zephrScriptContainer = document.querySelector('#zephrScript');
                const zephrScript = document.createElement('script');
                zephrScript.src = "/build/js/zephr-browser.umd.min.js?ver=489e9c6372f1fc90afa61be5275e802a4a230f0c";
                zephrScript.async = true;
                if(zephrScriptContainer.hasChildNodes()) {
                    zephrScriptContainer.removeChild(zephrScriptContainer.firstChild);
                }
                zephrScriptContainer.appendChild(zephrScript);
            });

            window.zephr_backend_url = 'https://zephr.newscientist.com';
            var gpt_suspend_refresh_call = true;
            var suspended_refresh_call = window.setTimeout(function () {
                if (googleConsent) {
                    googletag.pubads().refresh();
                }
            }, 3000);
        </script>
                    <script>
                if ('loading' in HTMLImageElement.prototype) {
                    const images = document.querySelectorAll('img[loading="lazy"]');
                    images.forEach(function(img) {
                        img.src = img.dataset.src;
                        if(img.dataset.srcset) {
                            img.srcset = img.dataset.srcset;
                        }
                    });
                } else {
                                        const images = document.querySelectorAll('img[loading="lazy"]');
                    images.forEach(function(img) {
                        img.src = 'https://images.newscientist.com/wp-content/uploads/2015/08/ns-logo-for-featured-image.jpg?width=3';
                    });
                    // Dynamically import the LazySizes library
                    const script = document.createElement('script');
                    script.src =
                        '/build/js/lazysizes.min.js?ver=489e9c6372f1fc90afa61be5275e802a4a230f0c';
                    document.body.appendChild(script);
                }
            </script>


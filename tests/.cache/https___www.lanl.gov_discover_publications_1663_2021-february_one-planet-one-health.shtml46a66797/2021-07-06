              <!-- Desktop Expandable Search Form -->
              <div class="col ml-lg-5 justify-content-end grlp-expandable-search-bar" id="search-form-container" style="display: none; padding-top: 6px; padding-bottom: 7px;">
                <div class="grlp-search-bar">
                  <form action="https://searcher-green.lanl.gov/webapps/LANL_External#/search" class="globalsearch" id="search-form2" method="get">
                    <button aria-label="submit search" class="grlp-search-bar-submit"><img alt="Search Icon" src="/_assets/2020/green-home/images/grlp-search-icon.svg"/></button>
                    <input aria-label="search form" class="grlp-search-bar-input text-white" id="grlp-search-input" maxlength="100" name="q" placeholder="Search" size="20" type="text"/>
                    <span class="sr-only">Search</span>
                    <!--<input name="proxystylesheet" value="inside_lanl" type="hidden" />
                    <input name="client" value="inside_lanl" type="hidden" />
                    <input name="output" value="xml_no_dtd" type="hidden" />-->
                  </form>  
                </div>
              </div>
        
              <div class="col-1 col-lg-1 pt-lg-3 ml-lg-5 grlp-search-container">
        
                <!-- Search Icon Button -->
                <div id="search-container">
                  <button class=" grlp-search-button d-none d-lg-flex flex-column justify-content-center navbar-toggle" id="search-expand-button" type="button">
                    <img alt="Search Icon" class="" src="/_assets/2020/green-home/images/grlp-search-icon.svg"/>
                    <span class="sr-only">Toggle Desktop Search</span>
                  </button>
                </div>
                
                <!-- Times Icon Button -->
                <div id="times-container" style="display: none;">
                  <button class="d-none d-lg-flex flex-column justify-content-center navbar-toggle grlp-times-button" id="times-close-button" type="button">
                      <img alt="Search Close Icon" class="" src="/_assets/2020/green-home/images/grlp-times-icon.svg"/>
                  <span class="sr-only">Toggle Desktop Search</span>
                  </button>
                </div>
        
                <!-- Search Button Expander -->
                <script>
                  //Variables to control search related DOM elements
                  const searchContainer = document.querySelector('#search-container');
                  const searchExpandButton = document.querySelector('#search-expand-button');
                  const searchFormContainer = document.querySelector('#search-form-container');
                  const searchInput = document.querySelector('#grlp-search-input');
                  const headerNavContainer = document.querySelector('#header-nav');
                  const timesCloseButton = document.querySelector('#times-close-button');
                  const timesContainer = document.querySelector('#times-container');
                  const tabletMobileActivated = window.matchMedia("(max-width: 992px)");
                  
                  //Search Expander to open Search Bar
                  searchExpandButton.addEventListener('click', function() {
                    
                    
                    headerNavContainer.classList.remove('navbar-headers-visible');
                    headerNavContainer.classList.add('navbar-headers-invisible');
                    
                    setTimeout(function() {
                      if (searchContainer.style.display = 'block') {
                      searchContainer.style.display = 'none';
                      }
                      if (timesContainer.style.display === 'none') {
                        timesContainer.style.display = 'block';
                      }
                      headerNavContainer.classList.add('navbar-display-none');
                      if (searchFormContainer.style.display === 'none') {
                        searchFormContainer.style.display = 'flex';
                      }
                      searchInput.focus();
                    }, 100);
                    
                  })
        
                  //Times Btn to close Search Bar with animation
                  timesCloseButton.addEventListener('click', function() {
                    closeSearch();
                  })
        
                  //If viewport goes below boostrap md, actiavte close immediately without animation
                  function checkViewportWidth(tabletMobileActivated) {
                    if (tabletMobileActivated.matches) {
                        
                        searchInput.blur();
        
                      if (timesContainer.style.display === 'block') {
                        timesContainer.style.display = 'none';
                      }
                      if (searchContainer.style.display = 'none') {
                        searchContainer.style.display = 'block';
                      }
                      if (searchFormContainer.style.display === 'flex') {
                        searchFormContainer.style.display = 'none';
                      }
        
                      headerNavContainer.classList.remove('navbar-display-none');
                      headerNavContainer.classList.remove('navbar-headers-invisible');
                    }
                  }
        
                  checkViewportWidth(tabletMobileActivated);
                  tabletMobileActivated.addListener(checkViewportWidth);
                  
                  //If Search Bar does not have active focus on it, then close the search bar
                  searchInput.addEventListener('blur', closeSearch);
        
                  //Function to close search bar with animation
                  function closeSearch() {
                    searchInput.blur();
        
                    setTimeout(function() {
                      if (timesContainer.style.display === 'block') {
                      timesContainer.style.display = 'none';
                      }
                      if (searchContainer.style.display = 'none') {
                        searchContainer.style.display = 'block';
                      }
                      headerNavContainer.classList.add('navbar-headers-visible');
                      headerNavContainer.classList.remove('navbar-headers-invisible');
                    }, 200);
        
                    setTimeout(function() {
                      if (searchFormContainer.style.display === 'flex') {
                        searchFormContainer.style.display = 'none';
                      }
                      headerNavContainer.classList.remove('navbar-display-none');
                    }, 300);
                  }

                </script>
        
                <!-- Navbar Button and Icon -->
                <div class="col-lg-1 pt-lg-4 ml-lg-5 d-lg-none">
                  <div class="flex-column justify-content-center">
                    <button class="navbar-toggle collapsed" data-target="#navbar-main" data-toggle="collapse" id="navbar-dropdown-btn" type="button">
                      <img alt="Los Alamos National Lab Logo" class="open-button" src="/_assets/2020/green-home/images/grlp-navbar-hamburger.svg"/>
                      <img alt="Los Alamos National Lab Logo" class="close-button" src="/_assets/2020/green-home/images/grlp-navbar-close.svg"/>
                    </button>
                  </div>
                </div>
        
              </div>
            </div>
          </div>
        
        </header>


        <!-- GRLP Search Form -->
        <div class="container bg-primary-gradient w-100 p-0 d-block d-lg-none collapse navbar-collapse" id="navbar-main">
        
        	<div class="collapse navbar-collapse" id="navbar-main">
        		<div class="container">
        
        			<!-- GRLP Dropdown Searchbox -->

        				<div class="col-12">
        					
        					<!-- GRLP Search Form -->
        					<form action="https://searcher-green.lanl.gov/webapps/LANL_External#/search" class="globalsearch" id="search-form2" method="get">
        						<div class="pl-3 card-body row no-gutters">
        							<img alt="Search Icon" class="grlp-mobile-search-icon" src="/_assets/2020/green-home/images/grlp-search-icon.svg"/>
        							<input class="w-75 bg-transparent text-white form-control grlp-search-input-mobile" maxlength="100" name="q" placeholder="Search" size="20" type="search"/>
        						</div>
        						<input name="proxystylesheet" type="hidden" value="inside_lanl"/>
        						<input name="client" type="hidden" value="inside_lanl"/>
        						<input name="output" type="hidden" value="xml_no_dtd"/>
        					</form>
        				</div>

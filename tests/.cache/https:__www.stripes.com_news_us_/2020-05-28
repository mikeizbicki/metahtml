				$(document).ready(function () {
					$('ul#moreList342009 li div div.row:first').css('padding-top', '20px');
					size_li = $("#moreList342009 li").size();
					x = 0;
					$('#moreList342009 li:lt(' + x + ')').show();
					$('#loadMore-bottom-box342009, #moreList-close-all342009, #after-loadMore342009').hide();
			
					$('#first-loadMore342009, #load-next-more342009').click(function () {
						$('#loadMore342009').css({'-moz-border-radius': '5px 5px 0px 0px', '-webkit-border-radius': '5px 5px 0px 0px', 'border-radius': '5px 5px 0px 0px'});
						$('#more-reveal342009 #loadMore342009').css({'border-bottom': 'solid 4px #21513b'});
						x = (x + 10 <= size_li) ? x + 10 : size_li;
						$('#moreList342009 li:lt(' + x + ')').show();
						$('#loadMore-bottom-box342009, #after-loadMore342009').show();
						$('#moreList-close-all342009, #first-loadMore342009').hide();
						if (x === size_li) {
							$('#loadMore-bottom-box342009').hide();
							$('#moreList-close-all342009').show();
						}
					});
			
					$('#moreList-close-all342009, #close-next-more342009, #after-loadMore342009').click(function () {
						$('#loadMore342009').css({'-moz-border-radius': '5px', '-webkit-border-radius': '5px', 'border-radius': '5px', 'border-bottom': 'none'});
						x = (x - size_li < 0) ? 0 : x - size_li;
						$('#moreList342009 li').not(':lt(' + x + ')').hide();
						$('#loadMore-bottom-box342009, #moreList-close-all342009, #after-loadMore342009').hide();
						$('#first-loadMore342009').show();
					});
				});

<script type="text/javascript">

var setCookie = function(name, value, exp) {
  var date = new Date();
  date.setTime(date.getTime() + exp*24*60*60*1000);
  document.cookie = name + '=' + value + ';expires=' + date.toUTCString() + ';path=/';
};

var getCookie = function(name) {
  var value = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
  return value? value[2] : null;
};




var fontSize = getCookie('kh_f');
var lineHeight = getCookie('kh_lh');
if(fontSize == "" || isNaN(fontSize)){
	fontSize =$('#articleText').css('fontSize').replace("px", "");
	lineHeight = "150%"; 
}else{
	$("#articleText").css({"font-size":fontSize+"px", "line-height" : lineHeight })
	setCookie("kh_f",fontSize,20);
	setCookie("kh_lh",lineHeight,20);
}


function fontSizeChange(article, option){
	var nCurrentSize = $('#' + article).css('fontSize');	
	var font_size = parseFloat($("#articleText  font").attr("size"), 10) ;

	var fNum = parseFloat( nCurrentSize, 10 );
	var strUnit = nCurrentSize.slice( -2 );

	if(option == "up"){
		fNum += 1;
		font_size += 0.4; 
		if( fNum > 30 )
			fNum = 30;
	}else{		
		fNum -= 1;
		font_size -= 0.4; 
		if( fNum < 10 )
			fNum = 10;		
		if( font_size < 0 )
			font_size = 0;		
		
	}

	line_h = "1.6"; 
	setCookie("kh_f",fNum,20);
	setCookie("kh_lh",line_h,20);
	setCookie("kh_f2",font_size,20);
	//font_size = Math.round(font_size);
	//font_size = parseInt(nCurrentSize2) + Math.floor(fNum / 5 ); 


	$("#articleText").css({"font-size":fNum+"px", "line-height" : line_h})

	$("#articleText font").attr("size", font_size);
	
}


function goNewsletter(){
	window.open('http://biz.heraldcorp.com/custom/newsletter.php','_blank'); 
}


</script>





